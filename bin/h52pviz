#!/bin/bash
function usage {
    echo "USAGE: `basename $0` options"
    echo "Options:"
    echo " -i filename : input filename"
    echo " -o filename : output filename"
    echo " -l name     : lable variable name"
    echo " -m name     : map variable name"
    echo " -v          : verbose"
}

IDNAME=id
LBNAME=lb
MPNAME=M
VERBOSE=0

while getopts ":i:l:m:o:v" OPTION
do
    case $OPTION in
        o) OUTFILE=$OPTARG ;;
        i) IDNAME=$OPTARG ;;
        l) LBNAME=$OPTARG ;;
        m) MPNAME=$OPTARG ;;
        v) VERBOSE=1;;
        h|*) usage; exit;
            ;;
    esac
done
shift $(($OPTIND - 1))

if [ $# -lt 1 ]  ; then
    usage
    exit
fi

INFILE=$1
BASENAME=`basename $INFILE`
[ x$OUTFILE == x ] && OUTFILE=${BASENAME%.*}.txt

PREFIX=`mktemp -d -t dagtm`
[ $VERBOSE == 1 ] && echo "Temporary directory ... " $PREFIX

IDFILE=$PREFIX/id.txt
LBFILE=$PREFIX/lb.txt
MPFILE=$PREFIX/M.txt

h5dump -d $IDNAME -w 1 -y -o $IDFILE $INFILE 1> /dev/null
h5dump -d $LBNAME -w 1 -y -o $LBFILE $INFILE 1> /dev/null
h5dump -d $MPNAME      -y -o $MPFILE $INFILE 1> /dev/null

paste $IDFILE $MPFILE $LBFILE | \
    tr -d ',' | \
    awk '{ print $1, $2, $3, $4, $5 }' > $OUTFILE

echo "Saved ... " $OUTFILE
echo "Done."

